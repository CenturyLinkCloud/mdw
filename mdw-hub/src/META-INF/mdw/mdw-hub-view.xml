    <column
      attribute="status"
      name="Status" />
    <column
      attribute="categoryCode"
      name="Category" />
    <column
      attribute="assignee"
      name="Assignee" />
    <column
      attribute="startDate"    
      name="Start Date"
      dateFormat="MMM dd, yyyy hh:mm aa" />
    <column
      attribute="dueDate"    
      name="Due Date"
      dateFormat="MMM dd, yyyy" />
    <column
      attribute="advisory"
      name="Advisory"
      styleClass="mdw_advisoryItem" />
  </list>

  <list
    id="orderTaskList"
    name="Order Task List"
    model="com.centurylink.mdw.taskmgr.ui.orders.OrderTaskList"
    controller="com.centurylink.mdw.taskmgr.ui.orders.OrderTaskListActionController"
    defaultSortColumn="Task ID"
    displayRows="20"
    allRowsLink="true">
    <column
      attribute="instanceId"
      name="Task ID"
      linkAction="taskDetail" />
    <column
      attribute="name"
      name="Name" />
    <column
      attribute="status"
      name="Status" />
    <column
      attribute="dueDate"
      name="Due Date" />
    <column
      attribute="assignee"
      name="Assignee" />
    <column
      attribute="advisory"
      name="Advisory"
      styleClass="mdw_advisoryItem" />
  </list>

  <list
    id="processInstanceList"
    name="Process Instances"
    model="com.centurylink.mdw.taskmgr.ui.process.ProcessInstances"
    filter="processInstanceFilter"
    controller="com.centurylink.mdw.hub.ui.process.ProcessListController"
    defaultSortColumn="Instance ID"
    defaultSortDescending="true"
    displayRows="25"
    paginatedResponse="true"
    columnarFilters="true"
    customButtons="launchProcess,Launch Process,run.gif,go_processLaunch"
    exportable="true"
    allRowsLink="true">
