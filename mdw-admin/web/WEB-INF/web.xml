<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xmlns="http://java.sun.com/xml/ns/javaee" 
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
  id="mdw-admin" version="3.0">
  <display-name>mdw-admin</display-name>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <filter>
    <filter-name>CustomContentFilter</filter-name>
    <filter-class>com.centurylink.mdw.admin.servlet.CustomContentFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CustomContentFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>  
  
  <servlet>
    <servlet-name>RootServlet</servlet-name>
    <servlet-class>com.centurylink.mdw.admin.servlet.RootServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>CustomContentServlet</servlet-name>
    <servlet-class>com.centurylink.mdw.admin.servlet.CustomContentServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>RootServlet</servlet-name>
    <url-pattern>/index.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RootServlet</servlet-name>
    <url-pattern>/root.js</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CustomContentServlet</servlet-name>
    <url-pattern>/customContent/*</url-pattern>
  </servlet-mapping>
      
</web-app>