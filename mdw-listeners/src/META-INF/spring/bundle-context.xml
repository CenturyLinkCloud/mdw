<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:osgi="http://www.springframework.org/schema/osgi"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                      http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi-1.0.xsd">


  <bean id="mdwEventHandlerProvider" class="com.centurylink.mdw.listeners.provider.EventHandlerProviderBean" />
  <osgi:service ref="mdwEventHandlerProvider">
    <osgi:interfaces>
      <value>com.centurylink.mdw.common.provider.EventHandlerProvider</value>
    </osgi:interfaces>
    <osgi:service-properties>
      <entry key="alias" value="mdwEventHandlers"/>
    </osgi:service-properties>    
  </osgi:service>

  <bean id="mdwBusListenerStartupProvider"
    class="com.centurylink.mdw.listener.tibco.BusListenerRegistration" />

  <osgi:service ref="mdwBusListenerStartupProvider">
    <osgi:interfaces>
      <value>com.centurylink.mdw.common.provider.StartupService</value>
    </osgi:interfaces>
    <osgi:service-properties>
      <entry key="alias" value="mdwBusListenerStartup"/>
    </osgi:service-properties>    
  </osgi:service>
  

  <bean id="mdwMqListenerStartupProvider"
    class="com.centurylink.mdw.listener.mqseries.MDWMQListenerRegistration" />

  <osgi:service ref="mdwMqListenerStartupProvider">
    <osgi:interfaces>
      <value>com.centurylink.mdw.common.provider.StartupService</value>
    </osgi:interfaces>
    <osgi:service-properties>
      <entry key="alias" value="mdwMqListenerStartup"/>
    </osgi:service-properties>    
  </osgi:service>
  
  <bean id="taskServices" class="com.centurylink.mdw.services.task.TaskServicesImpl" />
  <osgi:service ref="taskServices">
    <osgi:interfaces>
      <value>com.centurylink.mdw.services.TaskServices</value>
    </osgi:interfaces>
  </osgi:service> 
  
