##  Created by Don Craddock 02/19/2015
##  FUSE KARAF Variables
KARAF_HOME="/foss/appl/jboss-fuse/current"
KARAF_BASE="/foss/appl/jboss-fuse/current/instances/mdwa_dev2_1"
KARAF_ETC="${KARAF_BASE}/etc"
KARAF_DATA="${KARAF_BASE}/data"
KARAF_LOG="${KARAF_DATA}/log"
PROP_DIR="${KARAF_ETC}/properties"
KEYSTORE_DIR="/foss/foss-fuse/certs"

## JAVA_OPTS for the JVM 
JAVA_OPTS="-server -Xms512m -Xmx512m -XX:PermSize=64m -XX:MaxPermSize=128m -XX:+UseParallelGC -XX:+UseParallelOldGC
-Dweb.external.propdir="$PROP_DIR"
-Dkaraf.data="${KARAF_DATA}"
-Dkaraf.etc="${KARAF_ETC}"
-Dcom.sun.management.jmxremote
-XX:+UnlockDiagnosticVMOptions
-XX:+UnsyncloadClass
-Djava.net.preferIPv4Stack=true
-Djava.awt.headless=true
-Djdk.map.althashing.threshold=512
-Dsun.rmi.dgc.client.gcInterval=3600020
-Dsun.rmi.dgc.server.gcInterval=3600020
-XX:+HeapDumpOnOutOfMemoryError
-XX:HeapDumpPath="${KARAF_LOG}" 
-XX:ErrorFile="${KARAF_LOG}/hs_err_pid%p.log"
-verbose:gc 
-Xloggc:${KARAF_LOG}/gclogs.log 
-XX:+PrintGCDetails 
-XX:+PrintGCDateStamps
-Djavax.net.ssl.trustStore="${KEYSTORE_DIR}/foss.truststore"
-Djavax.net.ssl.trustStorePassword="changeit"
-XX:+UnlockCommercialFeatures 
-XX:+FlightRecorder"
PATH=$PATH:/opt/tib/MIDD50/tibrv/bin;
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/opt/tib/MIDD50/tibrv/lib;
