<?xml version="1.0" encoding="UTF-8"?>
<web-app
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  version="2.5">
  <servlet>
    <servlet-name>put</servlet-name>
    <servlet-class>com.centurylink.mdw.hub.servlet.PutServlet</servlet-class>
    <init-param>
      <param-name>mdw.put.location</param-name>
      <param-value>repository</param-value>
    </init-param>
    <init-param>
      <param-name>mdw.put.overwrite</param-name>
      <param-value>true</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>default</servlet-name>
    <servlet-class>org.apache.catalina.servlets.DefaultServlet</servlet-class>
    <init-param>
      <param-name>debug</param-name>
      <param-value>0</param-value>
    </init-param>
    <init-param>
      <param-name>listings</param-name>
      <param-value>true</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>put</servlet-name>
    <url-pattern>/repo/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>MDW Maven</web-resource-name>
      <url-pattern>/*</url-pattern>
      <http-method>PUT</http-method>
    </web-resource-collection>
    <auth-constraint>
      <role-name>mdwdev</role-name>
    </auth-constraint>
  </security-constraint>
  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>MDW Maven</realm-name>
  </login-config>
  <security-role>
    <description>Role for HTTP PUT</description>
    <role-name>mdwdev</role-name>
  </security-role>
</web-app>