package com.centurylink.mdw.hub.ui.requests;

import java.util.Date;

import com.centurylink.mdw.hub.ui.DetailManager;
import com.centurylink.mdw.model.value.requests.RequestVO;
import com.centurylink.mdw.taskmgr.ui.detail.ModelWrapper;
import com.centurylink.mdw.web.ui.UIException;
import com.centurylink.mdw.web.ui.list.ListItem;

public class RequestItem extends ListItem implements ModelWrapper {

    public RequestItem() throws UIException {
        DetailManager dm = (DetailManager) DetailManager.getInstance();
        listenerRequestVO = dm.getRequestDetail().getRequest().getListenerRequestVO();
    }

    public RequestItem(RequestVO listenerRequestVO) {
        super();
        this.listenerRequestVO = listenerRequestVO;
    }

    public RequestItem(RequestVO listenerRequestVO, RequestVO listenerResponseVO) {
        super();
        this.listenerRequestVO = listenerRequestVO;
        this.listenerResponseVO = listenerResponseVO;
    }

    private RequestVO listenerRequestVO;
    private RequestVO listenerResponseVO;

    public RequestVO getListenerRequestVO() {
        return listenerRequestVO;
    }

    public void setListenerRequestVO(RequestVO listenerRequestVO) {
        this.listenerRequestVO = listenerRequestVO;
    }

    public RequestVO getListenerResponseVO() {
        return listenerResponseVO;
    }

    public void setListenerResponseVO(RequestVO listenerResponseVO) {
        this.listenerResponseVO = listenerResponseVO;
    }

    public Long getInstanceId() {
        return listenerRequestVO.getRequestId();
    }

    public Long getRequestId() {
        return getInstanceId();
    }

    public Date getReceivedDate() {
        return listenerRequestVO.getReceivedDate();
    }

    public String getOrderId() {
        return listenerRequestVO.getOrderId();
    }

    public String getSearchKey1() {
        return listenerRequestVO.getSearchKey1();
    }

    public String getSearchKey2() {
        return listenerRequestVO.getSearchKey2();
    }

    public String getContent() {
        return listenerRequestVO.getContent();
    }

    public String getProcessStatus() {
        return listenerRequestVO.getProcessInstanceStatus();
    }

    public Long getProcessInstanceId() {
        return listenerRequestVO.getProcessInstanceId();
    }

    @Override
    public String getWrappedId() {
        return getRequestId().toString();
    }

    @Override
    public Object getWrappedInstance() {
        return getListenerRequestVO();
    }

}
