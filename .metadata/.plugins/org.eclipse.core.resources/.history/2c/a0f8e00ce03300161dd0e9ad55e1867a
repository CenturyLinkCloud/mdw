package com.centurylink.mdw.hub.ui.requests;

import com.centurylink.mdw.hub.ui.DetailManager;
import com.centurylink.mdw.web.ui.UIException;

public class RequestDetailLinkController {
    public String goOrderDetail() throws UIException {
        DetailManager detailManager = (DetailManager) DetailManager.getInstance();
        RequestDetail requestDetail = detailManager.getRequestDetail();
        detailManager.setOrderDetail(requestDetail.getRequest().getOrderId());
        return "go_orderDetail";
    }
    public String goProcessDetail() throws UIException {
        DetailManager detailManager = (DetailManager) DetailManager.getInstance();
        RequestDetail requestDetail = detailManager.getRequestDetail();
        detailManager.setProcessDetail(String.valueOf(requestDetail.getRequest().getProcessInstanceId()));
        return "go_processDetail";
    }
}
