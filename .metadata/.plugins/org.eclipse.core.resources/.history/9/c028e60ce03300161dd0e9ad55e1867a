package com.centurylink.mdw.hub.ui.requests;

import java.util.ArrayList;
import java.util.List;

import javax.faces.model.SelectItem;

import com.centurylink.mdw.model.data.work.WorkStatus;
import com.centurylink.mdw.taskmgr.ui.Lister;

public class WorkStatuses implements Lister {

    @Override
    public List<SelectItem> list() {
        List<SelectItem> list = new ArrayList<SelectItem>();
        list.add(new SelectItem("0", ""));
        for (int i=0; i< WorkStatus.allStatusCodes.length; i++) {
            list.add(new SelectItem(WorkStatus.allStatusCodes[i], WorkStatus.allStatusNames[i]));
        }
        return list;
    }
}
