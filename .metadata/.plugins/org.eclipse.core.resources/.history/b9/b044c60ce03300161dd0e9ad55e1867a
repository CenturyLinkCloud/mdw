package com.centurylink.mdw.hub.ui.requests;

import com.centurylink.mdw.hub.ui.DetailManager;
import com.centurylink.mdw.taskmgr.ui.list.ListActionController;
import com.centurylink.mdw.web.ui.UIException;
import com.centurylink.mdw.web.ui.list.ListItem;

public class RequestsListController implements ListActionController {

    /* (non-Javadoc)
     * @see com.centurylink.mdw.web.ui.list.ListActionController#performAction(java.lang.String, com.centurylink.mdw.web.ui.list.ListItem)
     */
    @Override
    public String performAction(String action, ListItem listItem) throws UIException {
        RequestItem request = (RequestItem) listItem;
        DetailManager detailManager = (DetailManager)DetailManager.getInstance();
        if (action.equals("orderDetail")) {
            detailManager.setOrderDetail(request.getOrderId());
            return "go_orderDetail";
        }
        else if (action.equals("processDetail")) {
            detailManager.setProcessDetail(String.valueOf(request.getProcessInstanceId()));
            return "go_processDetail";
        }
        else if (action.equals("requestDetail")) {
            detailManager.setRequestDetail(String.valueOf(request.getRequestId()));
            request = detailManager.getRequestDetail().getRequest();
            return "go_requestDetail";
        }
        return null;
    }

}
