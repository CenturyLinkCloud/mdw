package com.centurylink.mdw.hub.ui.requests;

import javax.faces.model.DataModel;

import com.centurylink.mdw.common.utilities.logger.LoggerUtil;
import com.centurylink.mdw.common.utilities.logger.StandardLogger;
import com.centurylink.mdw.model.value.requests.RequestVO;
import com.centurylink.mdw.taskmgr.ui.data.PagedListDataModel;
import com.centurylink.mdw.taskmgr.ui.data.RowConverter;
import com.centurylink.mdw.taskmgr.ui.layout.ListUI;
import com.centurylink.mdw.taskmgr.ui.list.SortableList;
import com.centurylink.mdw.web.ui.UIException;
import com.centurylink.mdw.web.ui.list.ListItem;

public class Requests extends SortableList {
    private static StandardLogger logger = LoggerUtil.getStandardLogger();

    /**
     * @param listUI
     */
    public Requests(ListUI listUI) {
        super(listUI);
    }

    @Override
    protected DataModel<ListItem> retrieveItems() throws UIException {
        try {
            PagedListDataModel pagedDataModel = new RequestDataModel(getListUI(), getFilter(), getUserPreferredDbColumns());
            pagedDataModel.setRowConverter(new RowConverter() {
                public Object convertRow(Object o) {
                    RequestVO request = (RequestVO) o;
                    RequestItem instance = new RequestItem(request);
                    return instance;
                }
            });
            return pagedDataModel;
        }
        catch (Exception ex) {
            String msg = "Problem retrieving Requests.";
            logger.severeException(msg, ex);
            throw new UIException(msg, ex);
        }
    }
}
