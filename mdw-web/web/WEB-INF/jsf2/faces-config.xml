<?xml version="1.0" encoding="UTF-8"?>
<faces-config xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd" version="2.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <name>MDWWeb</name>
  
  <application>
    <locale-config>
      <default-locale>en_US</default-locale>
      <supported-locale>en</supported-locale>
    </locale-config>
  </application>
  
  <lifecycle>
    <phase-listener>com.centurylink.mdw.web.jsf.phase.SerialFactoryPhaseListener</phase-listener>  
    <phase-listener>com.centurylink.mdw.web.jsf.phase.MdwSessionPhaseListener</phase-listener>  
    <phase-listener>com.centurylink.mdw.web.jsf.phase.DeSkinningPhaseListener</phase-listener>  
    <phase-listener>com.centurylink.mdw.web.jsf.phase.NoticeTemplatePhaseListener</phase-listener>  
    <phase-listener>com.centurylink.mdw.web.jsf.phase.ListRefreshPhaseListener</phase-listener>
  </lifecycle>

  <!-- common web components -->
  <component>
    <component-type>com.centurylink.mdw.web.jsf.components.DataScroller</component-type>
    <component-class>com.centurylink.mdw.web.jsf.components.DataScroller</component-class>
  </component>
  <component>
    <component-type>com.centurylink.mdw.web.jsf.components.DataTable</component-type>
    <component-class>com.centurylink.mdw.web.jsf.components.DataTable</component-class>
  </component>
  <component>
    <component-type>org.apache.myfaces.HtmlPanelGroup</component-type>
    <component-class>org.apache.myfaces.component.html.ext.HtmlPanelGroup</component-class>
  </component>
  <component>
    <component-type>com.centurylink.mdw.web.jsf.components.Javascript</component-type>
    <component-class>com.centurylink.mdw.web.jsf.components.Javascript</component-class>
  </component>
  <component>
    <component-type>com.centurylink.mdw.web.jsf.components.Validator</component-type>
    <component-class>com.centurylink.mdw.web.jsf.components.Validator</component-class>
  </component>
  <component>
    <component-type>com.centurylink.mdw.web.jsf.components.Filter</component-type>
    <component-class>com.centurylink.mdw.web.jsf.components.Filter</component-class>
  </component>
  <component>
    <component-type>com.centurylink.mdw.web.jsf.components.Criteria</component-type>
    <component-class>com.centurylink.mdw.web.jsf.components.Criteria</component-class>
  </component>
  <component>
    <component-type>com.centurylink.mdw.web.jsf.components.TabPanel</component-type>
    <component-class>com.centurylink.mdw.web.jsf.components.TabPanel</component-class>
  </component>
  <component>
    <component-type>com.centurylink.mdw.web.jsf.components.Tab</component-type>
    <component-class>com.centurylink.mdw.web.jsf.components.Tab</component-class>
  </component>
  <component>
    <component-type>com.centurylink.mdw.web.jsf.components.TabLink</component-type>
    <component-class>com.centurylink.mdw.web.jsf.components.TabLink</component-class>
  </component>  
  <component>
    <component-type>com.centurylink.mdw.web.jsf.components.NavigationMenu</component-type>
    <component-class>com.centurylink.mdw.web.jsf.components.NavigationMenu</component-class>
  </component>
  <component>
    <component-type>com.centurylink.mdw.web.jsf.components.NavigationLink</component-type>
    <component-class>com.centurylink.mdw.web.jsf.components.NavigationLink</component-class>
  </component>
  <component>
    <component-type>com.centurylink.mdw.web.jsf.components.NavOutputLink</component-type>
    <component-class>com.centurylink.mdw.web.jsf.components.NavOutputLink</component-class>
  </component>
  <component>
    <component-type>org.apache.myfaces.SubForm</component-type>
    <component-class>com.centurylink.mdw.web.jsf.components.SubForm</component-class>
  </component>  
  
  <render-kit>
    <renderer>
      <component-family>javax.faces.Panel</component-family>
      <renderer-type>com.centurylink.mdw.web.jsf.renderers.DataScrollerRenderer</renderer-type>
      <renderer-class>com.centurylink.mdw.web.jsf.renderers.DataScrollerRenderer</renderer-class>
    </renderer>
    <renderer>
      <component-family>javax.faces.Data</component-family>
      <renderer-type>com.centurylink.mdw.web.jsf.renderers.DataTableRenderer</renderer-type>
      <renderer-class>com.centurylink.mdw.web.jsf.renderers.DataTableRenderer</renderer-class>
    </renderer>
    <renderer>
      <component-family>javax.faces.Output</component-family>
      <renderer-type>com.centurylink.mdw.web.jsf.renderers.JavascriptRenderer</renderer-type>
      <renderer-class>com.centurylink.mdw.web.jsf.renderers.JavascriptRenderer</renderer-class>
    </renderer>
    <renderer>
      <component-family>javax.faces.Output</component-family>
      <renderer-type>com.centurylink.mdw.web.jsf.renderers.ValidatorRenderer</renderer-type>
      <renderer-class>com.centurylink.mdw.web.jsf.renderers.ValidatorRenderer</renderer-class>
    </renderer>
    <renderer>
      <component-family>javax.faces.Data</component-family>
      <renderer-type>com.centurylink.mdw.web.jsf.renderers.FilterRenderer</renderer-type>
      <renderer-class>com.centurylink.mdw.web.jsf.renderers.FilterRenderer</renderer-class>
    </renderer>
    <renderer>
      <component-family>javax.faces.Column</component-family>
      <renderer-type>com.centurylink.mdw.web.jsf.renderers.CriteriaRenderer</renderer-type>
      <renderer-class>com.centurylink.mdw.web.jsf.renderers.CriteriaRenderer</renderer-class>
    </renderer>
    <renderer>
      <component-family>javax.faces.Panel</component-family>
      <renderer-type>com.centurylink.mdw.web.jsf.renderers.NavigationMenuRenderer</renderer-type>
      <renderer-class>com.centurylink.mdw.web.jsf.renderers.NavigationMenuRenderer</renderer-class>
    </renderer>
    <renderer>
      <component-family>javax.faces.Command</component-family>
      <renderer-type>com.centurylink.mdw.web.jsf.renderers.NavigationLinkRenderer</renderer-type>
      <renderer-class>com.centurylink.mdw.web.jsf.renderers.NavigationLinkRenderer</renderer-class>
    </renderer>
    <renderer>
      <component-family>org.apache.myfaces.SubForm</component-family>
      <renderer-type>org.apache.myfaces.SubForm</renderer-type>
      <renderer-class>com.centurylink.mdw.web.jsf.renderers.SubFormRenderer</renderer-class>
    </renderer>    
    
 </render-kit>

  <managed-bean>
    <managed-bean-name>mdw</managed-bean-name>
      <managed-bean-class>
        com.centurylink.mdw.web.ui.MDWBase
      </managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>  
  <managed-bean>
    <managed-bean-name>authenticatedUser</managed-bean-name>
      <managed-bean-class>
        com.centurylink.mdw.model.value.user.AuthenticatedUser
      </managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    <managed-bean-name>error</managed-bean-name>
      <managed-bean-class>
        com.centurylink.mdw.web.ui.UIError
      </managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    <managed-bean-name>dataAccess</managed-bean-name>
      <managed-bean-class>
        com.centurylink.mdw.web.ui.MDWDataAccess
      </managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    <managed-bean-name>formDataDocument</managed-bean-name>
      <managed-bean-class>
        com.centurylink.mdw.model.FormDataDocument
      </managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <validator>
    <validator-id>dataItemValidator</validator-id>
    <validator-class>com.centurylink.mdw.web.jsf.validators.DataItemValidator</validator-class>
  </validator>
  <validator>
    <validator-id>dateRangeValidator</validator-id>
    <validator-class>com.centurylink.mdw.web.jsf.validators.DateRangeValidator</validator-class>
  </validator>

  <converter>
    <converter-for-class>java.util.Date</converter-for-class>
    <converter-class>com.centurylink.mdw.web.jsf.converters.DefaultDateTimeConverter</converter-class>
  </converter>
  <converter>
    <converter-id>dateTimeConverter</converter-id>
    <converter-class>com.centurylink.mdw.web.jsf.converters.DateTimeConverter</converter-class>
  </converter>
  
</faces-config>