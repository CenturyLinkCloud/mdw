<!-- Specifies the standard bulk and individual task actions.  The 
     standard actions are applicable regardless of how the process
     is defined.  See the comments under taskDetailActions for
     information on dynamic actions to extend these configured
     standard actions. -->

<taskActions>

  <bulkTaskActions>
    <!-- allowable bulk actions for any unclaimed tasks -->
    <allowableBulkActions>
      <allowableAction>
        Assign
        <navigationOutcome>tasks</navigationOutcome>
      </allowableAction>
      <allowableAction>
        Claim
        <navigationOutcome>myTasks</navigationOutcome>
      </allowableAction>
      <allowableAction>
        Release
        <navigationOutcome>tasks</navigationOutcome>
      </allowableAction>
    </allowableBulkActions>
    
    <!-- allowable bulk actions for assigned tasks -->
    <assignedBulkActions>
      <allowableAction>
        Assign
        <navigationOutcome>tasks</navigationOutcome>
      </allowableAction>
      <allowableAction alias="Cancel" requireComment="true">
        Abort
        <navigationOutcome>tasks</navigationOutcome>
      </allowableAction>
      <allowableAction>
        Complete
        <navigationOutcome>tasks</navigationOutcome>
        <autosave>true</autosave>
      </allowableAction>  
      <allowableAction>
        Release
        <navigationOutcome>tasks</navigationOutcome>
      </allowableAction>
      <allowableAction>
        Retry
        <navigationOutcome>tasks</navigationOutcome>
      </allowableAction>
    </assignedBulkActions>
  </bulkTaskActions>
  

  <!-- Standard allowable actions for individual tasks as viewed on the
    TaskDetail page.  By default the standard actions are globally available to 
    all task instances.  You can control which types of tasks a standard action
    is available for by including the forTasks subelement.
    Standard actions are supplemented by process-specific actions which are
    determined by the result codes of outgoing work transitions. -->
  <taskDetailActions>
    <taskStatus status="Open">
      <allowableAction>
        Assign
        <navigationOutcome>tasks</navigationOutcome>
      </allowableAction>
      <allowableAction alias="Cancel" requireComment="true">
        Abort
        <navigationOutcome>tasks</navigationOutcome>
      </allowableAction>
      <allowableAction>
        Claim
        <navigationOutcome>myTaskDetail</navigationOutcome>
      </allowableAction>
    </taskStatus>
    <taskStatus status="Assigned">
      <allowableAction>
        Assign
        <navigationOutcome>tasks</navigationOutcome>
      </allowableAction>
      <allowableAction>
        Release
        <navigationOutcome>tasks</navigationOutcome>
      </allowableAction>
      <!-- If 'Work' is declared as an action, then assigned tasks will be
           displayed as read-only in the task detail page until the Work action
           is performed (which will change the status to 'In Progress'). -->
      <!--
      <allowableAction>
        Work
        <navigationOutcome>myTaskDetail</navigationOutcome>
      </allowableAction>
       
    </taskStatus>
    <taskStatus status="In Progress">
      -->
      <allowableAction alias="Cancel" requireComment="true">
        Abort
        <navigationOutcome>tasks</navigationOutcome>
      </allowableAction>
      <allowableAction>
        Complete
        <navigationOutcome>tasks</navigationOutcome>
        <autosave>true</autosave>
      </allowableAction>
      <!-- illustrates task forwarding -->
      <!--
      <allowableAction alias="Transfer" requireComment="true">
        Forward
        <navigationOutcome>tasks</navigationOutcome>
        <forTask>
          Routed Task
          <destination>MDW Support</destination>
          <destination>Fallout Specialists</destination>
        </forTask>
      </allowableAction>
      -->
      <allowableAction>
        Release
        <navigationOutcome>tasks</navigationOutcome>
      </allowableAction>
      <allowableAction>
        Retry
        <navigationOutcome>tasks</navigationOutcome>
      </allowableAction>
    </taskStatus>
    <taskStatus status="Failed">
    </taskStatus>
    <taskStatus status="Completed">
    </taskStatus>
    <taskStatus status="Cancelled">
    </taskStatus>
  </taskDetailActions>
  
</taskActions>